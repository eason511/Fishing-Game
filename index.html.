<body>
    <h1>Fishing Game 🎣</h1>

    <p id="coins">💰 Coins: 0</p>
    <p id="fishCaught">🐟 Fish Caught: 0</p>

    <div class="button-container">
        <button onclick="game.startFishing()">🎣 Start Fishing</button>
        <button onclick="game.upgradeRod()">⚡ Upgrade Rod (50 Coins)</button>
        <button onclick="saveGame()">💾 Save Game</button>
        <button onclick="resetGame()">🔄 Reset Game</button>
    </div>

    <div id="fishingArea"></div>
    <p id="status">Welcome to the fishing game!</p>

    <h2>🏆 Leaderboard</h2>
    <p id="leaderboard">- No record yet -</p>

    <script>
        class FishingGame {
            constructor() {
                this.fishCaught = 0;
                this.isFishing = false;
                this.rodLevel = 1;
                this.coins = 0;
                this.fishTypes = [
                    { name: "Salmon", rarity: "Common", value: 5 },
                    { name: "Trout", rarity: "Common", value: 6 },
                    { name: "Tuna", rarity: "Uncommon", value: 10 },
                    { name: "Shark", rarity: "Rare", value: 20 },
                    { name: "Golden Fish", rarity: "Legendary", value: 50 },
                    { name: "Catfish", rarity: "Common", value: 7 },
                    { name: "Bass", rarity: "Common", value: 8 },
                    { name: "Swordfish", rarity: "Rare", value: 25 },
                    { name: "Megalodon", rarity: "Mythical", value: 100 },
                    { name: "Jellyfish", rarity: "Uncommon", value: 12 },
                    { name: "Anglerfish", rarity: "Rare", value: 30 },
                    { name: "Kraken", rarity: "Legendary", value: 200 }
                ];
                this.loadGame();
                this.updateLeaderboard();
            }

            upgradeRod() {
                if (this.rodLevel >= 5) {
                    this.updateStatus("Your fishing rod is at max level!");
                    return;
                }
                if (this.coins >= 50) {
                    this.coins -= 50;
                    this.rodLevel++;
                    this.updateStatus(`Fishing rod upgraded to level ${this.rodLevel}!`);
                    this.updateUI();
                } else {
                    this.updateStatus("Not enough coins to upgrade!");
                }
            }

            startFishing() {
                if (this.isFishing) {
                    return;
                }

                this.isFishing = true;
                this.updateStatus("Casting the fishing line... 🎣");

                setTimeout(() => {
                    this.catchFish();
                }, 1500 - this.rodLevel * 200); // 降低最大等待時間，加快體驗
            }

            catchFish() {
                this.isFishing = false;
                let fish = this.getRandomFish();
                this.fishCaught++;
                this.coins += fish.value;
                this.updateStatus(`You caught a ${fish.name} (${fish.rarity})! 💰 +${fish.value} Coins`);
                this.updateUI();
            }

            getRandomFish() {
                let totalWeight = 0;
                let weights = this.fishTypes.map(f => {
                    let weight = 100 / (1 + f.value); // 根據價值調整機率
                    totalWeight += weight;
                    return weight;
                });

                let random = Math.random() * totalWeight;
                let accumulated = 0;

                for (let i = 0; i < this.fishTypes.length; i++) {
                    accumulated += weights[i];
                    if (random <= accumulated) {
                        return this.fishTypes[i];
                    }
                }
                return this.fishTypes[0];
            }

            updateStatus(message) {
                document.getElementById("status").innerText = message;
            }

            updateUI() {
                document.getElementById("coins").innerText = `💰 Coins: ${this.coins}`;
                document.getElementById("fishCaught").innerText = `🐟 Fish Caught: ${this.fishCaught}`;
                this.updateLeaderboard();
            }

            updateLeaderboard() {
                let bestFish = Math.max(this.fishCaught, localStorage.getItem("bestFish") || 0);
                let bestCoins = Math.max(this.coins, localStorage.getItem("bestCoins") || 0);

                localStorage.setItem("bestFish", bestFish);
                localStorage.setItem("bestCoins", bestCoins);

                document.getElementById("leaderboard").innerHTML = `
                    🥇 Most Fish Caught: ${bestFish}<br>
                    🥇 Highest Coins Earned: ${bestCoins}
                `;
            }
        }

        const game = new FishingGame();
    </script>
</body>
</html>
