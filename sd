<body>
    <h1>Fishing Game üé£</h1>
    <p id="coins">üí∞ Coins: 0</p>
    <p id="fishCaught">üêü Fish Caught: 0</p>
    <div class="button-container">
        <button id="fishButton">üé£ Start Fishing</button>
        <button id="upgradeButton">‚ö° Upgrade Rod (50 Coins)</button>
    </div>
    <p id="status">Welcome to the fishing game!</p>

    <script>
        class FishingGame {
            constructor() {
                this.fishCaught = 0;
                this.isFishing = false;
                this.rodLevel = 1;
                this.coins = 0;
                this.fishTypes = [
                    { name: "Salmon", value: 5 },
                    { name: "Tuna", value: 10 },
                    { name: "Shark", value: 20 },
                    { name: "Golden Fish", value: 50 }
                ];
                this.bindButtons();
                this.updateUI();
            }

            bindButtons() {
                document.getElementById("fishButton").onclick = () => this.startFishing();
                document.getElementById("upgradeButton").onclick = () => this.upgradeRod();
            }

            startFishing() {
                if (this.isFishing) return;
                this.isFishing = true;
                document.getElementById("fishButton").disabled = true;
                this.updateStatus("Casting the fishing line... üé£");

                setTimeout(() => {
                    this.catchFish();
                }, 2000 - this.rodLevel * 200);
            }

            catchFish() {
                this.isFishing = false;
                let fish = this.getRandomFish();
                this.fishCaught++;
                this.coins += fish.value;
                this.updateStatus(`You caught a ${fish.name}! üí∞ +${fish.value} Coins`);
                this.updateUI();
                document.getElementById("fishButton").disabled = false;
            }

            upgradeRod() {
                if (this.coins < 50) {
                    this.updateStatus("Not enough coins to upgrade!");
                    return;
                }
                if (this.rodLevel >= 5) {
                    this.updateStatus("Rod is already max level!");
                    return;
                }
                this.coins -= 50;
                this.rodLevel++;
                this.updateStatus(`Rod upgraded to level ${this.rodLevel}!`);
                this.updateUI();
            }

            getRandomFish() {
                return this.fishTypes[Math.floor(Math.random() * this.fishTypes.length)];
            }

            updateUI() {
                document.getElementById("coins").innerText = `üí∞ Coins: ${this.coins}`;
                document.getElementById("fishCaught").innerText = `üêü Fish Caught: ${this.fishCaught}`;
                document.getElementById("upgradeButton").disabled = this.coins < 50;
            }

            updateStatus(message) {
                document.getElementById("status").innerText = message;
            }
        }

        const game = new FishingGame();
    </script>
</body>
</html>
